<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.loginregister.LoginActivity">

    <EditText
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/etUsername"
        android:hint="Name please"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_login"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/bLogin"
        android:layout_marginBottom="16dp"
        tools:layout_constraintBottom_creator="1" />

    <Button
        android:text="LOGIN"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/bLogin"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_login"
        android:layout_marginTop="76dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:text="Register Here"
        android:layout_width="58dp"
        android:layout_height="16dp"
        android:id="@+id/tvRegisterHere"
        app:layout_constraintLeft_toLeftOf="@+id/etUsername"
        android:layout_marginLeft="159dp"
        android:layout_marginStart="159dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/bLogin"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        android:layout_marginRight="159dp"
        android:layout_marginEnd="159dp"
        tools:layout_constraintRight_creator="1" />
</android.support.constraint.ConstraintLayout>
